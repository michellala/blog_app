<!-- for each of the posts I want to put them in a post_wrapper div -->
<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, post %></h2>
<!--     We are going to show the date they were created 
(not the time like in show.html.erb) -->
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
      
    </div>
<% end %> 